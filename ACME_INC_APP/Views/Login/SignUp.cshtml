@model ACME_INC_APP.Models.User

@{
    ViewData["Title"] = "SignUp";
}

<body>

    <h1>Sign Up</h1>
    <hr />
    <h5 style="color:green;">@ViewBag.Success</h5>
    <h5 style="color:red;">@ViewBag.Error</h5>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="SignUp">
                <fieldset>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="text-align:left">
                        <label asp-for="Username" class="form-label mt-4"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="text-align:left">
                        <label asp-for="Email" class="form-label mt-4"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="text-align:left">
                        <label class="form-label mt-4">User Role</label>
                        <select asp-for="UserRoleId" class="form-select" id="exampleSelect1" asp-items="ViewBag.UserRoleId"></select>
                    </div>

                    <div class="form-group" style="text-align:left">
                        <label asp-for="Password" class="form-label mt-4"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="d-grid gap-2">
                        <input type="submit" value="Create" class="btn btn-lg btn-primary" />
                    </div>
                    <hr />
                </fieldset>
            </form>
        </div>
    </div>
    <br />
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
