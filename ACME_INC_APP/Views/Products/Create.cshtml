@model ACME_INC_APP.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="form-label mt-4"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ProdCatId" class="form-label mt-4">Product Category</label>
                <select asp-for="ProdCatId" class="form-select" id="exampleSelect1" asp-items="ViewBag.ProdCatId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="form-label mt-4"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formFile" class="form-label mt-4">Product Image</label>
                <input name="formFile" class="form-control" type="file" id="formFile" />
                <span name="formFile" class="text-danger"></span>
            </div>
            <br/>
            <div class="d-grid gap-2">
                <input type="submit" value="Create" class="btn btn-lg btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
